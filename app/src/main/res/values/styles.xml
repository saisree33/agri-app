<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ThemePaddy" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="ThemePulses" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="ThemeGroundnut" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/lime</item>
        <item name="colorPrimaryDark">@color/lime_dark</item>
        <item name="colorAccent">@color/lime</item>
    </style>

    <style name="ThemeTobacco" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="ThemeMaize" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="ThemeRagi" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryDark">@color/darkblue_dark</item>
        <item name="colorAccent">@color/darkblue</item>
    </style>

    <style name="ThemeFruits" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/darkviolet</item>
        <item name="colorPrimaryDark">@color/darkviolet_dark</item>
        <item name="colorAccent">@color/darkviolet</item>
    </style>

    <style name="ThemeVegetables" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryDark">@color/violet_dark</item>
        <item name="colorAccent">@color/violet</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
